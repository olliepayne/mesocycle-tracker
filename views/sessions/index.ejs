<%- include('../partials/header') %>

<div class="view" id="sessions-index-page">
  <div class="generic-page-nav">
    <h1><%= mesocycle.attribute %> Sessions</h1>
    <a href="/mesocycles/<%= mesocycle._id %>">Back</a>
    <a href="/mesocycles/<%= mesocycle._id %>/sessions/new">Add</a><hr>
  </div>
  <% mesocycle.sessions.forEach((session) => { %>
    <h3>Session on <%= session.dateStr %></h3>
    <a href="/mesocycles/<%= mesocycle._id %>/sessions/<%= session._id %>">Details</a>
    <form action="/mesocycles/<%= mesocycle._id %>/sessions/<%= session._id %>?_method=DELETE" method="POST">
      <button class="delete-button">Delete</button>
    </form><br>
  <% }) %>
</div>

<%- include('../partials/footer') %>